  server
  {
    listen 80;
    server_name nfc.konst.fish;
    return 301  https://nfc.konst.fish$request_uri;
  }

  server
  {
    listen 443;
    server_name nfc.konst.fish;
    ssl on;
    ssl_certificate /etc/letsencrypt/live/konst.fish/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/konst.fish/privkey.pem;
    client_max_body_size 0;
    location /
    {
      proxy_pass http://10.0.1.100:4001/;
    }
  }