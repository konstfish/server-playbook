  server
  {
    listen 80;
    server_name obsidian.konst.fish;
    return 301  https://obsidian.konst.fish$request_uri;
  }

  server
  {
    listen 443;
    server_name obsidian.konst.fish;
    ssl on;
    ssl_certificate /etc/letsencrypt/live/konst.fish/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/konst.fish/privkey.pem;
    location /streaks/
    {
      proxy_pass http://10.0.2.70:4000/;
    }
  }