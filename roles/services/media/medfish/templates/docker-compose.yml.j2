version: '3.3'

services:
  transmission:
    image: haugene/transmission-openvpn:latest
    cap_add:
      - NET_ADMIN
    volumes:
      - /stor/transmission:/data
      - /etc/localtime:/etc/localtime:ro
    environment:
      - CREATE_TUN_DEVICE=true
      - OPENVPN_PROVIDER=NORDVPN
      - OPENVPN_USERNAME={{ nordvpn_user }}
      - OPENVPN_PASSWORD={{ nordvpn_password }}
      - WEBPROXY_ENABLED=false
      - LOCAL_NETWORK=10.0.0.0/16
      - TRANSMISSION_ALT_SPEED_DOWN=10000
      - TRANSMISSION_MAX_PEERS_GLOBAL=400
      - TRANSMISSION_PEER_LIMIT_PER_TORRENT=100
      - TRANSMISSION_PEER_LIMIT_GLOBAL=400
    ports:
      - 9091:9091
    restart: 'always'

  jackett:
    image: linuxserver/jackett:latest
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/Vienna
      - AUTO_UPDATE=true #optional
    volumes:
      - jackett_config:/config
      - jackett_downloads:/downloads
    ports:
      - 9117:9117
    restart: unless-stopped

  sonarr:
    image: linuxserver/sonarr:latest
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/Vienna
      - UMASK_SET=022
    volumes:
      - sonarr_config:/config
      - /stor/plex/shows:/tv
      - /stor/plex/anime:/anime
      - /stor/transmission/completed:/data/completed
    ports:
      - 8989:8989
    restart: unless-stopped

  radarr:
    image: linuxserver/radarr:latest
    environment:
      - PUID=0
      - PGID=0
      - TZ=Europe/Vienna
      - UMASK_SET=022
    volumes:
      - radarr_config:/config
      - /stor/plex/movies:/movies
      - /stor/transmission/completed:/data/completed
    ports:
      - 7878:7878
    restart: unless-stopped

volumes:
  jackett_config:
  jackett_downloads:
  sonarr_config:
  radarr_config: